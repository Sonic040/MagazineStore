@model Tuple<IEnumerable<MagazineSrore.Models.User1>, IEnumerable<MagazineSrore.Models.Product>, IEnumerable<MagazineSrore.Models.Sale2>>

@{ ViewData["Title"] = "tables";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-12">
        <form asp-action="tables">
            <input class="form-input" type="date" name="startDate" />
            <input class="form-input" type="date" name="endDate" />
            <button type="submit" class="btn">Search</button>
        </form>
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Sales table</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0" id="example">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item3)
                            {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            <img src=@Url.Content("~/Image/"+Model.Item2.Where(x=>x.Pid==item.Pid).SingleOrDefault().Imagepath) class="avatar avatar-sm me-3" alt="user1">
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@Model.Item2.Where(x => x.Pid == item.Pid).SingleOrDefault().Pname</h6>

                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-xs text-secondary mb-0">@Model.Item2.Where(x => x.Pid == item.Pid).SingleOrDefault().Price</p>

                                </td>
                                <td>
                                    <p class="text-xs text-secondary mb-0">@item.Datesold</p>

                                </td>
                            </tr>
}

                                @*   <tr>
                  <td>
                      <p class="text-xs text-secondary mb-0">@Model.Item3.ToList().ToString()</p>

                  </td>
            </tr>*@
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*----------------------------------------------------------------------------------------*@

    </div>
</div>
